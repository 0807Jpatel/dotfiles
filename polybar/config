[bar/bar]
;monitor = ${env:MONITOR:HDMI-1}
width = 100%
height = 21
;offset-x = 1%
;offset-y = 1%
fixed-center = true

locale = en_US.UTF-8

enable-ipc = true

padding-left = 8
padding-right = 0

module-margin-left = 0
module-margin-right = 0

modules-right = filesystem separator  cpu separator memory separator battery separator xbacklight separator volume separator date separator powermenu
modules-center = i3 
modules-left = spotify

background = ${colors.background}
foreground = ${colors.foreground}

underline-size = 2
underline-color = ${colors.white}

tray-detached = true
tray-position = left
tray-offset-x = 0
tray-offset-y = 0
;tray-maxsize = 16
tray-padding = 2 
tray-transparent = false
